{
    "name": "node-ts-template",
    "version": "v1.0.0",
    "description": "A simple template for node.js/typescript.",
    "engines": {
        "node": ">= 16.13 <17"
    },
    "devDependencies": {
        "@types/chai": "^4.3.1",
        "@types/express": "^4.17.13",
        "@types/mocha": "^9.1.1",
        "@types/node": "^16.11.41",
        "@types/superagent": "^4.1.15",
        "@types/supertest": "^2.0.12",
        "@typescript-eslint/eslint-plugin": "~5.26",
        "@typescript-eslint/parser": "~5.26",
        "chai": "^4.3.6",
        "chai-http": "^4.3.0",
        "eslint": "~8.16",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-airbnb-typescript": "^17.0.0",
        "eslint-config-prettier": "~8.5",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-mocha": "^10.0.5",
        "eslint-plugin-prettier": "^4.0.0",
        "mocha": "^10.0.0",
        "mongodb-memory-server": "^8.7.2",
        "nodemon": "^1.3.3",
        "prettier": "~2.6",
        "rimraf": "~3.0",
        "supertest": "^6.2.3",
        "ts-node": "^10.8.1",
        "tsutils": "~3.21",
        "typescript": "~4.7"
    },
    "scripts": {
        "start": "node build/src/server.js",
        "watch": "tsc -p tsconfig.json && node build/src/server.js",
        "clean": "rimraf coverage build tmp",
        "prebuild": "npm run lint",
        "build": "tsc -p tsconfig.json",
        "build:watch": "tsc -w -p tsconfig.json",
        "build:release": "npm run clean && tsc -p tsconfig.release.json",
        "lint": "eslint . --ext .ts --ext .mts",
        "test": "mocha -r ts-node/register test/**/*.test.ts --timeout 60000 --exit",
        "prettier": "prettier --config .prettierrc --write .",
        "preinstall": "([ ! -f package-lock.json ] && npm install --package-lock-only --ignore-scripts --no-audit); npx npm-force-resolutions"
    },
    "resolutions": {
        "glob-parent": "6.0.2",
        "got": "12.1.0"
    },
    "volta": {
        "node": "16.13.0"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "dotenv": "^16.0.1",
        "express": "^4.18.1",
        "mongoose": "^6.4.1",
        "morgan": "^1.10.0"
    }
}
